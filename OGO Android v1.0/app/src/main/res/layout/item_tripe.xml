<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/lvl_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start|top"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="5dp"

        >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:paddingEnd="5dp"
            android:src="@drawable/cars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_timedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12dp"
                style="@style/Font" />

            <TextView
                android:id="@+id/txt_type_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$25"
                android:textSize="14dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/txt_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circale_green"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:singleLine="true"
                android:text=""
                android:textSize="14dp" />

            <View
                android:layout_width="10dp"
                android:rotation="90"
                android:background="@drawable/dot"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/txt_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circale_red"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:singleLine="true"
                android:text=""
                android:textSize="14dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                style="@style/Font" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"

                android:src="@drawable/user" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>
